<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
  $(document).ready(function() {
    // Get next user ID when page loads
    getNextUserId();

    // Toggle password visibility
    $('#togglePassword').click(function() {
      const passwordInput = $('#password');
      if (passwordInput.attr('type') === 'password') {
        passwordInput.attr('type', 'text');
        $(this).text('Hide');
      } else {
        passwordInput.attr('type', 'password');
        $(this).text('Show');
      }
    });

    // Form submission
    $('#registrationForm').submit(function(e) {
      e.preventDefault();
      registerUser();
    });

    // View all users button
    $('#getAllBtn').click(function() {
      getAllUsers();
    });
  });

  function getNextUserId() {
    $.ajax({
      url: 'http://localhost:8082/api/v1/user/getNextUserId',
      type: 'GET',
      success: function(response) {
        if(response.code === 201) {
          $('#id').val(response.data);
        } else {
          Swal.fire('Error', 'Could not generate user ID', 'error');
        }
      },
      error: function() {
        Swal.fire('Error', 'Could not connect to server', 'error');
      }
    });
  }

  function registerUser() {
    const formData = {
      id: $('#id').val(),
      name: $('#name').val(),
      email: $('#email').val(),
      address: $('#address').val(),
      contact: $('#contact').val(),
      nic: $('#nic').val(),
      role:"USER",
      password: $('#password').val()
    };

    $.ajax({
      url: 'http://localhost:8082/api/v1/user/register',
      type: 'POST',
      contentType: 'application/json',
      data: JSON.stringify(formData),
      success: function(response) {
        if(response.code === 201) {
          Swal.fire('Success', 'User registered successfully!', 'success');
          $('#registrationForm')[0].reset();
          getNextUserId();
        } else if(response.code === 406) {
          Swal.fire('Warning', 'User already registered', 'warning');
        } else {
          Swal.fire('Error', 'Registration failed', 'error');
        }
      },
      error: function() {
        Swal.fire('Error', 'Registration failed', 'error');
      }
    });
  }

  function getAllUsers() {
    $.ajax({
      url: 'http://localhost:8080/api/v1/user/getAllUsers',
      type: 'GET',
      success: function(response) {
        if(response.code === 201 && response.content.length > 0) {
          let usersHtml = '<div style="text-align: left; max-height: 300px; overflow-y: auto;">';
          response.content.forEach(user => {
            usersHtml += `
              <div style="margin-bottom: 15px; padding: 10px; background: #f8f9fa; border-radius: 5px;">
                <p><strong>ID:</strong> ${user.id}</p>
                <p><strong>Name:</strong> ${user.name}</p>
                <p><strong>Email:</strong> ${user.email}</p>
                <p><strong>Role:</strong> ${user.role}</p>
              </div>
            `;
          });
          usersHtml += '</div>';

          Swal.fire({
            title: 'All Registered Users',
            html: usersHtml,
            width: '600px'
          });
        } else {
          Swal.fire('Info', 'No users found', 'info');
        }
      },
      error: function() {
        Swal.fire('Error', 'Could not fetch users', 'error');
      }
    });
  }
</script>
</body>
</html>
